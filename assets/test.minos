/* Ejemplo de comentario.*/
env ProductUseCases {
    resource Product {
        policy {
            allow = ["crear", "eliminar"];

            rule {
                actor.type = RootUser; /*Comentario2*/
            }

            rule {
                actor.groups *= ["ventas"];
                actor.roles = ["admin"];
            }

            rule {
                actor.groups *= ["ventas"];
                actor.roles = ["admin"];
            }
        }

        policy {
            allow = ["get inner"];

            rule {
                actor.type = CostumerUser;
            }

        }
    }
}

